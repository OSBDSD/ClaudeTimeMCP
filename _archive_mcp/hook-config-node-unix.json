{
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "50000"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node '/home/eric/ClaudeTimeMCP/scripts/onSessionStart.js'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node '/home/eric/ClaudeTimeMCP/scripts/onSessionEnd.js'"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node '/home/eric/ClaudeTimeMCP/scripts/onUserPromptSubmit.js'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node '/home/eric/ClaudeTimeMCP/scripts/onPostToolUse.js'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node '/home/eric/ClaudeTimeMCP/scripts/onStop.js'"
          }
        ]
      }
    ]
  }
}
